<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="3dp"/>
            <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp"/>
            <solid android:color="@color/btn_gray_pressed"/>
            <stroke android:width="1dp" android:color="@color/btn_gray_border_pressed"/>
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="3dp"/>
            <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp"/>
            <solid android:color="@color/btn_gray"/>
            <stroke android:width="1dp" android:color="@color/btn_gray_border"/>
        </shape>
    </item>
</selector>