<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bk_chat_input"
              android:orientation="vertical">
    <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_line"
            android:background="#c6c6c6"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:orientation="horizontal">
        <LinearLayout
                android:id="@+id/ll_input_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="bottom"
                android:orientation="horizontal"
                android:visibility="visible">
            <Button
                    android:id="@+id/btn_to_voice_mode"
                    android:layout_width="@dimen/chat_input_size"
                    android:layout_height="@dimen/chat_input_size"
                    android:background="@drawable/icon_chat_voice_mode"
            />
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:paddingBottom="8dp">
                <EditText
                        android:id="@+id/et_send_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:textCursorDrawable="@drawable/cursor"
                        android:background="@drawable/bg_et"
                        android:maxLines="4"
                        android:minHeight="32dp"
                        android:lineSpacingExtra="1dp"
                        android:textSize="16sp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/ll_input_voice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="bottom"
                android:orientation="horizontal"
                android:visibility="gone">
            <Button
                    android:id="@+id/btn_to_text_mode"
                    android:layout_width="@dimen/chat_input_size"
                    android:layout_height="@dimen/chat_input_size"
                    android:background="@drawable/icon_chat_keyboard_mode"
            />
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="@dimen/space_10"
                    android:paddingEnd="@dimen/space_10"
                    android:paddingBottom="8dp">
                <Button
                        android:id="@+id/btn_speak"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_gravity="bottom"
                        android:background="@drawable/speak"
                        android:text="@string/touch_to_speak"
                        android:textColor="#8c8c8c"/>
            </LinearLayout>

        </LinearLayout>

        <Button
                android:id="@+id/btn_expression"
                android:layout_width="@dimen/chat_input_size"
                android:layout_height="@dimen/chat_input_size"
                android:layout_gravity="bottom"
                android:background="@drawable/icon_chat_exp_mode"
        />
        <Button
                android:id="@+id/btn_keyboard"
                android:layout_width="@dimen/chat_input_size"
                android:layout_height="@dimen/chat_input_size"
                android:layout_gravity="bottom"
                android:background="@drawable/icon_chat_keyboard_mode"
                android:visibility="gone"
        />
        <Button
                android:id="@+id/btn_more"
                android:layout_width="@dimen/chat_input_size"
                android:layout_height="@dimen/chat_input_size"
                android:layout_gravity="bottom"
                android:background="@drawable/icon_chat_extra_mode"
        />
        <Button
                android:id="@+id/btn_send"
                android:layout_width="@dimen/chat_input_size"
                android:layout_height="32dp"
                android:layout_gravity="bottom"
                android:text="@string/send"
                style="@style/AppTheme.Button.Green"
                android:visibility="gone"
        />
    </LinearLayout>
    <LinearLayout
            android:id="@+id/ll_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:showDividers="middle"
            android:visibility="gone">
        <LinearLayout
                android:id="@+id/ll_emoji"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:showDividers="middle">
            <TextView
                    android:text="emoji"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/ll_extend"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">
            <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#d4d4d4"/>
            <com.spoom.base.widget.ChatExtendMenu
                    android:id="@+id/chat_extend_menu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#f5f5f5"
                    android:paddingBottom="8dp"
                    android:paddingTop="12dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    app:rowNum="4"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>