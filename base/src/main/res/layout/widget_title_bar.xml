<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rl_title_bar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_top_bar"
                android:background="@color/header_gray">
    <LinearLayout
            android:id="@+id/ll_left_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:visibility="visible">
        <ImageButton
                android:id="@+id/ib_left"
                android:layout_width="@dimen/height_top_bar"
                android:layout_height="match_parent"
                android:background="@drawable/topbar_btn_bk"
                android:scaleType="centerInside"
                android:src="@drawable/topbar_back"/>
        <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="#2E2E32"/>
    </LinearLayout>

    <TextView
            android:text="我的相册"
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toStartOf="@id/ll_right"
            android:layout_toEndOf="@id/ll_left_btn"
            android:ellipsize="end"
            android:gravity="left"
            android:maxLines="1"
            android:textColor="#ffffff"
            android:textSize="18sp"/>

    <LinearLayout
            android:id="@+id/ll_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true">
        <ImageButton
                android:id="@+id/ib_search"
                android:layout_width="@dimen/height_top_bar"
                android:layout_height="match_parent"
                android:background="@drawable/topbar_btn_bk"
                android:src="@drawable/ic_search_white_24dp"
                android:scaleType="centerInside"
                android:visibility="visible"/>
        <ImageButton
                android:id="@+id/ib_right"
                android:layout_width="52dp"
                android:layout_height="match_parent"
                android:background="@drawable/topbar_btn_bk"
                android:src="@drawable/ic_add_white_24dp"
                android:scaleType="centerInside"
                android:visibility="visible"/>

        <LinearLayout
                android:id="@+id/ll_right_text_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:visibility="gone">
            <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="#2E2E32"/>
            <TextView
                    android:text="消息通知"
                    android:id="@+id/tv_right_btn"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:background="@drawable/topbar_btn_bk"
                    android:clickable="true"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textColor="#ffffff"
                    android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>