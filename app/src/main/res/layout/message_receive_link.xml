<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <TextView
            android:text="1月28日 晚上20:25"
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/chat_row_space"
            android:layout_marginTop="@dimen/chat_row_space"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_gravity="center"
            style="@style/chat_time_style"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/chat_row_space"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">
        <ImageView
                android:id="@+id/iv_avatar_receive"
                android:layout_width="@dimen/chat_avatar_size"
                android:layout_height="@dimen/chat_avatar_size"
                android:src="@drawable/icon_group_chat"/>
        <RelativeLayout
                android:id="@+id/bubble"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="32dp"
                android:padding="10dp"
                android:background="@drawable/receive_bubble_image">
            <TextView
                    android:id="@+id/link_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:maxLength="24"
                    android:maxLines="2"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@id/link_title">
                <TextView
                        android:id="@+id/link_description"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginEnd="10dp"
                        android:lineSpacingExtra="6sp"
                        android:maxLength="40"
                        android:maxLines="2"
                        android:textColor="#c7c7c7"
                        android:textSize="12sp"/>
                <ImageView
                        android:id="@+id/link_image"
                        android:layout_width="@dimen/link_icon_size"
                        android:layout_height="@dimen/link_icon_size"
                        android:src="@drawable/icon_link"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>