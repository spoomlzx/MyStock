<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                android:layout_height="match_parent">

    <Button
            android:id="@+id/main_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/main_bottom_bg"
            android:drawableTop="@drawable/tab_conversation_bg"
            android:paddingBottom="3dip"
            android:paddingTop="3dip"
            android:scaleType="matrix"
            android:text="@string/chat"
            android:textColor="@color/main_bottom_text_color"
            android:textSize="12sp"/>

    <TextView
            android:id="@+id/unread_msg_number"
            android:layout_margin="3dp"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/main_button"
            android:background="@drawable/unread_count_bg"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="10sp" tools:ignore="SmallSp"/>
</RelativeLayout>