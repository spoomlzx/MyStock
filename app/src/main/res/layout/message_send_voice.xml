<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <TextView
            android:text="1月28日 晚上20:25"
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/chat_row_space"
            android:layout_marginTop="@dimen/chat_row_space"
            android:layout_gravity="center"
            style="@style/chat_time_style"/>
    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/chat_row_space"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">
        <ImageView
                android:id="@+id/iv_avatar_send"
                android:layout_width="@dimen/chat_avatar_size"
                android:layout_height="@dimen/chat_avatar_size"
                android:layout_alignParentEnd="true"
                android:src="@drawable/icon_group_chat"/>
        <RelativeLayout
                android:id="@+id/bubble"
                android:layout_width="200dp"
                android:layout_height="@dimen/chat_avatar_size"
                android:layout_toStartOf="@+id/iv_avatar_send"
                android:layout_marginEnd="4dp"
                android:gravity="end"
                android:background="@drawable/send_bubble">
            <ImageView
                    android:id="@+id/iv_voice"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/chat_avatar_size"
                    android:src="@drawable/icon_send_voice"/>
        </RelativeLayout>

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/bubble"
                android:layout_centerVertical="true">
            <ImageView
                    android:id="@+id/iv_status"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="5dp"
                    android:clickable="true"
                    android:src="@drawable/error_icon"
                    android:visibility="gone"/>
            <ProgressBar
                    android:id="@+id/pb_send"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:indeterminateDrawable="@drawable/progress_bar"
                    android:layout_centerVertical="true"
                    android:visibility="invisible"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>